<div class="main">
    <div class="main-container">
        <%- include('../partials/navbar_admin.ejs',{user_icon:"img/admin.png"}) %>
            <form action="" method="POST">
                <!-- Your form inputs -->
                <div class="mb-3">
                    <label for="exampleInputtext1" class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" id="exampleInputtext1"
                        value="<%= user.fullName %>" disabled>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email</label>
                    <input type="text" name="email" class="form-control" id="exampleInputEmail1"
                        value="<%= user.email %>" disabled>
                </div>

                <div class="mb-3">
                    <label for="exampleInputMobile" class="form-label">Mobile Number</label>
                    <input type="text" name="mobileNo" class="form-control" id="exampleInputMobile"
                        value="<%= user.mobileNo %>" disabled>
                </div>

                <div class="d-flex justify-content-center w-100">
                    <button class="btn btn-primary fs-4 mx-4" type="submit" name="submit" value="delete">Delete</button>
                    <a class="btn btn-outline-dark" href="/admin/dashboard">Back</a>
                </div>
            </form>
    </div>
</div>